<head>
    <%- include('includes/head'); -%>
</head>

<body>
    <%- include('includes/header'); -%>
    <section>

        <form action="/get-locations" method="post">
            <h2>Where do you want to travel from?</h2>
            <fieldset>
                <input placeholder="streetname or postal code" type="text" name="location">
            </fieldset>
            <h2>What do you want the stop to include?</h2>
            <fieldset>
                <input id= "generalaccess" type="radio" name="general">
                <label for="generalaccess">Generally accessable</label><br>
                <input type="radio" name="wheelchair">
                <label for="wheelchair">Wheelchail accessable</label><br>
                <input type="radio" name="visual">
                <label for="visual">Visually accessable</label><br>
                <input type="submit" name="submit" value="Find the best nearest stop for you!">
            </fieldset>
        </form>

        <!-- Als je locations meegeeft laat dan deze lijst zien -->

        <ul id="locations">

        </ul>
    </section>
    <%- include('includes/footer'); -%>

    <script src="global.js"></script>
</body>